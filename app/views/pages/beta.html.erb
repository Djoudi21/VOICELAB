<div class="w-form">
  <%= simple_form_for @user do |f| %>
    <div class="div-field m-b-20">
      <%= f.input :email,
          required: false,
          autofocus: true,
          input_html: { autocomplete: "email" },
          class: "text-field-3 w-input" %>
    </div>
    <div class="div-field m-b-20">
      <%= f.input :first_name,
                  required: false,
                  input_html: { autocomplete: "current-password" },
                  class: "text-field-3 w-input" %>
    </div>
    <div class="div-field m-b-20">
      <%= f.input :last_name,
                  required: false,
                  input_html: { autocomplete: "current-password" },
                  class: "text-field-3 w-input" %>
    </div>
    <div class="div-field m-b-20">
      <%= f.button :submit, "ok", class: "button_p-2 w-button" %>
    </div>
  <% end %>
</div>